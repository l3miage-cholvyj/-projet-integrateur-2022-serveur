drop table LesChamis;
drop table LesDefis;

create table LesDefis
(
	id varchar(20),
	titre varchar(30),
	auteur varchar(20),
	dateDeCreation Date,
	description varchar,
	constraint LesDefis_pk  primary key (id),
	constraint  LesDefis_fk foreign key (auteur)  references LesChamis(login)
);

create table LesChamis 
(
	login varchar(20) not null,
	ageChamis int,
	constraint LesChamis_pk primary key (login)
);
	


